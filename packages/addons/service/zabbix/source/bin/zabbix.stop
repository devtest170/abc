. /etc/profile
oe_setup_addon service.zabbix

ADDON_ID=service.zabbix
ADDON_DIR="${HOME}/.kodi/addons/${ADDON_ID}"
ADDON_HOME="${HOME}/.kodi/userdata/addon_data/${ADDON_ID}"

AGENT_PID=`cat /run/zabbix/zabbix_agent.pid`
PROXY_PID=`cat /run/zabbix/zabbix_proxy.pid`

kill -TERM ${AGENT_PID}
kill -TERM ${PROXY_PID}
