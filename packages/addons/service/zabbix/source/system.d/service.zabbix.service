[Unit]
Description=Zabbix software bundle
After=network-online.target
Requires=network-online.target

[Service]
Type=notification
ExecStart=/bin/sh -c "exec sh /storage/.kodi/addons/service.zabbix/bin/zabbix.start"
ExecStop=/bin/sh -c "exec sh /storage/.kodi/addons/service.zabbix/bin/zabbix.stop"
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/zabbix/zabbix_proxy.pid

[Install]
WantedBy=kodi.target
